<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CreateNewUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/textNewUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/new_user_name"
            android:inputType="text"
            android:lines="1"
            android:maxLines="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="@string/invalid_name"
            android:layout_marginStart="5dp"
            android:textColor="@android:color/holo_red_dark"
            android:id="@+id/textErrorNewUserName" />

        <EditText
            android:id="@+id/textNewUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/new_user_email"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:maxLines="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="@string/invalid_email"
            android:layout_marginStart="5dp"
            android:textColor="@android:color/holo_red_dark"
            android:id="@+id/textErrorNewUserEmail" />

        <EditText
            android:id="@+id/textNewUserPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/new_user_password"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLines="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="@string/invalid_password"
            android:layout_marginStart="5dp"
            android:textColor="@android:color/holo_red_dark"
            android:id="@+id/textErrorNewUserPassword" />

        <EditText
            android:id="@+id/textNewUserPasswordConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/new_user_confirm_password"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLines="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="@string/invalid_password_confirm"
            android:layout_marginStart="5dp"
            android:textColor="@android:color/holo_red_dark"
            android:id="@+id/textErrorNewUserPasswordConfirm" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/spinnerNewUserRole" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/new_user_submit"
                android:background="@color/colorPrimaryDark"
                android:textColor="#ffffffff"
                android:id="@+id/buttonNewUserSubmit" />

            <ProgressBar
                android:id="@+id/progressBarNewUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:progressTint="@android:color/background_light"
                android:translationZ="2dp" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>